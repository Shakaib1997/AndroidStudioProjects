<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.khan.shakaib.findinghitler.MainPage">
    <ProgressBar
        android:id="@+id/loadingDisplay"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />
    <TextView
        android:id="@+id/retryConnectionText"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:text="@string/retry_connection"
        android:layout_alignWithParentIfMissing = "true"
        android:onClick="onCreate"/>
    <Button
        android:layout_centerVertical="true"
        android:id="@+id/retryConnectionBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="loadContent"
        android:layout_alignWithParentIfMissing = "true"
        android:text="@string/retry"/>
    <Button
        android:id="@+id/findHitlerBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="findHitler"
        android:text="@string/find_hitler"/>
</RelativeLayout>
